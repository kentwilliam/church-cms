<p id="notice"><%= notice %></p>

<h1>Listing Calendar Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start time</th>
      <th>Endtime</th>
      <th>Cost</th>
      <th>Show register link</th>
      <th>Show donate link</th>
      <th>Childcare available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendar_events.each do |calendar_event| %>
      <tr>
        <td><%= calendar_event.title %></td>
        <td><%= calendar_event.start_time %></td>
        <td><%= calendar_event.endtime %></td>
        <td><%= calendar_event.cost %></td>
        <td><%= calendar_event.show_register_link %></td>
        <td><%= calendar_event.show_donate_link %></td>
        <td><%= calendar_event.childcare_available %></td>
        <td><%= link_to 'Show', calendar_event %></td>
        <td><%= link_to 'Edit', edit_calendar_event_path(calendar_event) %></td>
        <td><%= link_to 'Destroy', calendar_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

